{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++-14 build active file",
      "command": "/usr/local/bin/g++-14",
      "args": [
        "-std=c++23", // Specifica lo standard C++23
        "-fcolor-diagnostics", // Diagnostica leggibile
        "-g", // Aggiunge simboli di debug
        "${file}", // Compila il file attivo
        "-o", // Specifica l'output
        "${fileDirname}/${fileBasenameNoExtension}", // Nome file senza estensione
        "-I/usr/local/include", // Percorso delle librerie di intestazione
        "-L/usr/local/lib", // Percorso delle librerie
        "-lpng", // Collega libpng
        "-lraw" // Collega libraw
      ],
      "options": {
        "cwd": "${fileDirname}" // Directory corrente
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true // Imposta questo task come predefinito
      },
      "detail": "Task configurato per g++-14."
    }
  ],
  "version": "2.0.0"
}
